<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Version>1.0</Version>
    <Title>SAM.Analytical.Rhino.Plugin</Title>
    <Description>Description of SAM.Analytical.Rhino.Plugin</Description>
    <TargetExt>.rhp</TargetExt>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>
  
  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="EmbeddedResources\**\*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Forms\**" />
    <EmbeddedResource Remove="Forms\**" />
    <None Remove="Forms\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Classes\Commands\ExportGeometry.cs" />
    <EmbeddedResource Include="Classes\Commands\Test.cs" />
    <EmbeddedResource Include="Classes\AnalyticalPlugin.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Win32.SystemEvents" Version="9.0.5" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="RhinoCommon" Version="8.19.25132.1001" IncludeAssets="compile;build" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.5" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\SAM.Analytical.Rhino.Solver.UI\SAM.Analytical.Rhino.Solver.UI.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="SAM.Analytical">
      <HintPath>..\..\..\SAM\build\SAM.Analytical.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Analytical.Rhino">
      <HintPath>..\..\..\SAM\build\SAM.Analytical.Rhino.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Analytical.Solver">
      <HintPath>..\..\..\SAM_Solver\build\SAM.Analytical.Solver.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Analytical.Windows">
      <HintPath>..\..\..\SAM_Windows\build\SAM.Analytical.Windows.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Core">
      <HintPath>..\..\..\SAM\build\SAM.Core.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Geometry">
      <HintPath>..\..\..\SAM\build\SAM.Geometry.dll</HintPath>
    </Reference>
    <Reference Include="SAM.Geometry.Rhino">
      <HintPath>..\..\..\SAM\build\SAM.Geometry.Rhino.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <PropertyGroup Condition="$(Configuration) == 'Debug' AND $([MSBuild]::IsOSPlatform(Windows))">
    <StartProgram>C:\Program Files\Rhino 7\System\Rhino.exe</StartProgram>
    <StartArguments></StartArguments>
    <StartAction>Program</StartAction>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\build\</OutputPath>
    <DocumentationFile>..\..\build\SAM.Analytical.Rhino.UI.xml</DocumentationFile>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\build\Rhino Plugins\</OutputPath>
    <DocumentationFile>..\..\..\build\Rhino Plugins\SAM.Analytical.Rhino.Plugin.xml</DocumentationFile>
  </PropertyGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="@echo off&#xA;REM Set directories for Rhinoceros versions 7.0 and 8.0&#xA;set SAM_DIR7=$(APPDATA)\McNeel\Rhinoceros\packages\7.0\SAM\1.0.0\&#xA;set SAM_DIR8=$(APPDATA)\McNeel\Rhinoceros\packages\8.0\SAM\1.0.0\&#xD;&#xA;&#xD;&#xA;REM Create directories if they do not exist&#xA;if not exist &quot;%25SAM_DIR7%25&quot; mkdir &quot;%25SAM_DIR7%25&quot;&#xA;if not exist &quot;%25SAM_DIR8%25&quot; mkdir &quot;%25SAM_DIR8%25&quot;&#xA;&#xA;REM Copy files to Rhinoceros 7.0 directory&#xA;copy &quot;$(TargetDir)*.dll&quot; &quot;%25SAM_DIR7%25&quot;&#xA;copy &quot;$(TargetDir)*.rhp&quot; &quot;%25SAM_DIR7%25&quot;&#xA;copy &quot;$(TargetDir)*.xml&quot; &quot;%25SAM_DIR7%25&quot;&#xA;&#xA;REM Copy files to Rhinoceros 8.0 directory&#xA;copy &quot;$(TargetDir)*.dll&quot; &quot;%25SAM_DIR8%25&quot;&#xA;copy &quot;$(TargetDir)*.rhp&quot; &quot;%25SAM_DIR8%25&quot;&#xA;copy &quot;$(TargetDir)*.xml&quot; &quot;%25SAM_DIR8%25&quot;&#xA;&#xA;REM Create manifest.txt file in Rhinoceros 7.0 SAM directory&#xA;echo 1.0.0 &gt; &quot;c:\Users\DengusiakM\AppData\Roaming\McNeel\Rhinoceros\packages\7.0\SAM\manifest.txt&quot;&#xD;&#xA;&#xD;&#xA;REM Create manifest.txt file in Rhinoceros 8.0 SAM directory&#xA;echo 1.0.0 &gt; &quot;c:\Users\DengusiakM\AppData\Roaming\McNeel\Rhinoceros\packages\8.0\SAM\manifest.txt&quot;" />
  </Target>
  
</Project>